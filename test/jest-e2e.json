{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@modules/(.*)": ["<rootDir>/src/modules/$1"],
    "@utils/(.*)": ["<rootDir>/src/utils/$1"],
    "@common/(.*)": ["<rootDir>/src/common/$1"],
    "@config/(.*)": ["<rootDir>/config/$1"],
    "@enums/(.*)": ["<rootDir>/enums/$1"]
  }
}
